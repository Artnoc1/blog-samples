<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical" 
   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/flight_info_activity_boarding_pass"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/from_activity_boarding_pass"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText 
        android:id="@+id/originEditText"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:ems="10"
        android:inputType="textCapCharacters"
        android:maxLength="3"
        android:maxLines="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/to_activity_boarding_pass"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/destinationEditText"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:ems="10"
        android:inputType="textCapCharacters"
        android:lines="1"
        android:maxLength="3"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/showPassBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/show_pass_activity_boarding_pass" /> 
</LinearLayout>
